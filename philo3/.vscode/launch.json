{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "philo",
            "type": "cppdbg",
            "request": "launch",
            "args": ["4", "420", "200", "200"], // Pass the arguments here
            "program": "${workspaceFolder}/philo",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}